<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-2xl font-bold text-gray-900">Add Multiple Shifts</h1>
    <p class="mt-2 text-sm text-gray-600">Create multiple shifts at once for <%= @roster.name %></p>
  </div>

  <% if @error_shifts.present? %>
    <div class="mb-6 bg-red-50 border border-red-200 rounded-md p-4">
      <div class="flex">
        <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
        </svg>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
          <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
            <% @error_shifts.each do |index, errors| %>
              <li>Shift <%= index.to_i + 1 %>: <%= errors.join(', ') %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <%= form_with url: create_multi_roster_base_shifts_path(@roster), method: :post, class: "space-y-6", data: { controller: "multi-shifts" } do |form| %>
    
    <div id="shifts-container" class="space-y-4" data-multi-shifts-target="container">
      <% 
        # If we have saved data (from validation failure), render those shifts
        # Otherwise, render one empty shift
        shifts_to_render = @shifts_data.present? ? @shifts_data : { "0" => {} }
        shifts_to_render.each do |index, shift_data|
          has_errors = @error_shifts.present? && @error_shifts[index].present?
          border_color = has_errors ? 'border-red-300' : 'border-gray-300'
      %>
        <div class="p-4 border <%= border_color %> rounded-md bg-white relative shift-entry" data-index="<%= index %>">
          <button type="button" class="absolute top-2 right-2 text-gray-400 hover:text-red-600" data-action="click->multi-shifts#removeShift" data-index="<%= index %>">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
          
          <% if has_errors %>
            <div class="mb-3 text-sm text-red-600 font-medium">
              <%= @error_shifts[index].join(', ') %>
            </div>
          <% end %>
          
          <div class="grid grid-cols-2 gap-4 mb-4">
            <div>
              <%= label_tag "shifts[#{index}][day_of_week]", "Day of Week", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= select_tag "shifts[#{index}][day_of_week]", 
                  options_for_select(
                    BaseShift.day_of_weeks.keys.map { |k| [k.titleize, k] }, 
                    shift_data[:day_of_week] || shift_data['day_of_week']
                  ), 
                  class: "block w-full px-3 py-2 border #{has_errors ? 'border-red-300' : 'border-gray-300'} rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
            </div>

            <div>
              <%= label_tag "shifts[#{index}][work_section_id]", "Section", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= select_tag "shifts[#{index}][work_section_id]", 
                  options_for_select(
                    [[  "None (Use Type)", ""]] + current_user.work_sections.map { |ws| [ws.name, ws.id] }, 
                    shift_data[:work_section_id] || shift_data['work_section_id']
                  ), 
                  class: "block w-full px-3 py-2 border #{has_errors ? 'border-red-300' : 'border-gray-300'} rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
            </div>
          </div>

          <div class="grid grid-cols-2 gap-4">
            <div>
              <%= label_tag "shifts[#{index}][start_time]", "Start Time", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= time_field_tag "shifts[#{index}][start_time]", 
                  shift_data[:start_time] || shift_data['start_time'], 
                  class: "block w-full px-3 py-2 border #{has_errors ? 'border-red-300' : 'border-gray-300'} rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
            </div>

            <div>
              <%= label_tag "shifts[#{index}][end_time]", "End Time", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= time_field_tag "shifts[#{index}][end_time]", 
                  shift_data[:end_time] || shift_data['end_time'], 
                  class: "block w-full px-3 py-2 border #{has_errors ? 'border-red-300' : 'border-gray-300'} rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Add shift button -->
    <div class="flex items-center justify-between">
      <button type="button" 
              class="inline-flex items-center px-4 py-2 border border-blue-600 text-sm font-medium rounded-md text-blue-600 bg-white hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
              data-action="click->multi-shifts#addShift">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Add Another Shift
      </button>

      <div class="flex space-x-3">
        <%= link_to "Cancel", roster_path(@roster), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        <%= submit_tag "Create All Shifts", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    </div>
  <% end %>
</div>

<script>
// Stimulus controller embedded for simplicity
(function() {
  let shiftIndex = <%= @shifts_data.present? ? @shifts_data.keys.map(&:to_i).max + 1 : 1 %>;
  
  document.addEventListener('click', function(e) {
    // Add shift
    if (e.target.closest('[data-action*="addShift"]')) {
      e.preventDefault();
      const container = document.getElementById('shifts-container');
      const template = container.querySelector('.shift-entry').cloneNode(true);
      
      // Remove error styling and messages
      template.classList.remove('border-red-300');
      template.classList.add('border-gray-300');
      const errorMsg = template.querySelector('.text-red-600');
      if (errorMsg) errorMsg.remove();
      
      // Update indices in the template
      template.setAttribute('data-index', shiftIndex);
      template.querySelectorAll('select, input').forEach(field => {
        const name = field.getAttribute('name');
        if (name) {
          field.setAttribute('name', name.replace(/\[\d+\]/, `[${shiftIndex}]`));
          // Reset border color
          field.classList.remove('border-red-300');
          field.classList.add('border-gray-300');
        }
        field.value = '';
      });
      
      template.querySelectorAll('label').forEach(label => {
        const forAttr = label.getAttribute('for');
        if (forAttr) {
          label.setAttribute('for', forAttr.replace(/\[\d+\]/, `[${shiftIndex}]`));
        }
      });
      
      const removeBtn = template.querySelector('[data-action*="removeShift"]');
      if (removeBtn) {
        removeBtn.setAttribute('data-index', shiftIndex);
      }
      
      container.appendChild(template);
      shiftIndex++;
    }
    
    // Remove shift
    if (e.target.closest('[data-action*="removeShift"]')) {
      e.preventDefault();
      const container = document.getElementById('shifts-container');
      const entries = container.querySelectorAll('.shift-entry');
      
      // Only allow removal if more than 1 shift
      if (entries.length > 1) {
        e.target.closest('.shift-entry').remove();
      } else {
        alert('You must have at least one shift');
      }
    }
  });
})();
</script>
