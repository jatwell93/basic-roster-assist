<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">User Award Assignments</h1>
      <p class="mt-2 text-sm text-gray-600">Manage Fair Work award assignments for staff members</p>
    </div>
    <div class="flex space-x-3">
      <%= link_to 'Award Rates', awards_path, class: 'bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-md text-sm font-medium' %>
      <%= link_to 'Back to Dashboard', root_path, class: 'bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-md text-sm font-medium' %>
    </div>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-md">
    <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Staff Members & Award Assignments</h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500">Assign Fair Work awards to staff for accurate wage calculations</p>
    </div>

    <ul role="list" class="divide-y divide-gray-200">
      <% @users.each do |user| %>
        <li class="px-4 py-4 sm:px-6">
          <div class="flex items-center justify-between">
            <div class="flex-1 min-w-0">
              <div class="flex items-center">
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-medium text-gray-900 truncate">
                    <%= user.name.presence || 'Unnamed User' %>
                  </p>
                  <p class="text-sm text-gray-500 truncate">
                    <%= user.email %>
                  </p>
                  <div class="mt-1">
                    <% if user.award_rates.any? %>
                      <div class="flex flex-wrap gap-1">
                        <% user.award_rates.each do |award| %>
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                            <%= award.award_code %> - <%= award.classification %> ($<%= sprintf('%.2f', award.rate) %>)
                          </span>
                        <% end %>
                      </div>
                    <% else %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                        No award assigned
                      </span>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
            <div class="flex items-center space-x-2">
              <%= link_to 'Manage Awards', "#", class: 'text-blue-600 hover:text-blue-900 text-sm font-medium',
                          data: { user_id: user.id, action: 'manage-awards' } %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>

    <% if @users.empty? %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No users found</h3>
        <p class="mt-1 text-sm text-gray-500">Users will appear here once they are added to the system.</p>
      </div>
    <% end %>
  </div>
</div>

<!-- Award Assignment Modal (placeholder for future implementation) -->
<div id="award-modal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full" role="dialog">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
    <div class="mt-3">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Manage Award Assignments</h3>
      <p class="text-sm text-gray-500 mb-4">Award assignment functionality will be implemented in the next phase.</p>
      <div class="flex justify-end">
        <button type="button" class="px-4 py-2 bg-gray-500 text-white text-sm font-medium rounded-md hover:bg-gray-600" onclick="closeModal()">
          Close
        </button>
      </div>
    </div>
  </div>
</div>

