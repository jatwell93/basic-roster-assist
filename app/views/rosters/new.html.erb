<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h1 class="text-2xl font-bold text-gray-900 mb-2">Create New Roster</h1>
      <p class="text-sm text-gray-600 mb-6">Set up a new roster schedule with shifts and team assignments</p>

      <%= form_with model: @roster, url: rosters_path, class: "space-y-6" do |form| %>
        <% if @roster.errors.any? %>
          <div class="rounded-md bg-red-50 p-4">
            <h3 class="text-sm font-medium text-red-800">
              <%= pluralize(@roster.errors.count, "error") %> prevented this roster from being saved:
            </h3>
            <ul class="mt-2 list-disc list-inside text-sm text-red-700">
              <% @roster.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :name, placeholder: "e.g., Monday-Friday Weekly Schedule", class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          <p class="mt-1 text-sm text-gray-500">A descriptive name for this roster</p>
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <%= form.label :starts_at, "Start Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.date_field :starts_at, class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          </div>

          <div>
            <%= form.label :ends_at, "End Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.date_field :ends_at, class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          </div>
        </div>

        <div>
          <%= form.label :week_type, "Schedule Type", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <fieldset class="space-y-2">
            <div class="flex items-center">
              <%= form.radio_button :week_type, :weekly, id: "week_type_weekly", class: "h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-500" %>
              <label for="week_type_weekly" class="ml-2 block text-sm text-gray-700">
                Weekly Schedule
              </label>
            </div>
            <div class="flex items-center">
              <%= form.radio_button :week_type, :fortnightly, id: "week_type_fortnightly", class: "h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-500" %>
              <label for="week_type_fortnightly" class="ml-2 block text-sm text-gray-700">
                Fortnightly Schedule (2 weeks)
              </label>
            </div>
          </fieldset>
        </div>

        <div>
          <%= form.label :weekly_sales_forecast, "Weekly Sales Forecast ($)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.number_field :weekly_sales_forecast, placeholder: "e.g., 5000", step: :any, class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          <p class="mt-1 text-sm text-gray-500">Optional: Used to calculate labor cost percentages</p>
        </div>

        <div class="flex items-center justify-between pt-4 border-t border-gray-200">
          <%= link_to "Cancel", rosters_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          <%= form.submit "Create Roster", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
